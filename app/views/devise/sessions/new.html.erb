<div class="row">
  <div class="col-m8 offset-m2 center">
    <h2>Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemessage" %>
      
      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "validate"  %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "validate" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>
      <%= link_to "Forgot Password?", new_user_password_path, class: "btn waves-effect waves-light" %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col m8 offset-m2 center">
    <h2>Sign up</h2>
    <%= link_to "Sign up with Google", user_google_oauth2_omniauth_authorize_path, class: "btn red darken-1" %>
    <br/><br/>
    <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn blue darken-4" %>
    <br/><br/>
    <%= link_to "Sign up with Github", user_github_omniauth_authorize_path, class: "btn grey darken-2" %>

    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemessage" %>

      <div class="input-field">
        <%= f.label :name %><br />
        <%= f.password_field :name, autofocus: true, class: "validate" %>
      </div>
      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "validate"  %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "validate" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
    <% end %>

    <%#= render "devise/shared/links" %>

  </div>
</div>
